<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/reservationBackground"
        android:layout_width="228dp"
        android:layout_height="227dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_3" />

    <ImageView
        android:id="@+id/reservationPlaceholder"
        android:layout_width="148dp"
        android:layout_height="112dp"
        app:layout_constraintBottom_toBottomOf="@+id/reservationBackground"
        app:layout_constraintEnd_toEndOf="@+id/reservationBackground"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/reservationBackground"
        app:layout_constraintTop_toTopOf="@+id/reservationBackground"
        app:layout_constraintVertical_bias="0.191"
        app:srcCompat="@drawable/img_3" />

    <TextView
        android:id="@+id/reservationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Reservation Name"
        app:layout_constraintBottom_toBottomOf="@+id/reservationBackground"
        app:layout_constraintEnd_toEndOf="@+id/reservationBackground"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/reservationBackground"
        app:layout_constraintTop_toBottomOf="@+id/reservationPlaceholder"
        app:layout_constraintVertical_bias="0.175" />

</androidx.constraintlayout.widget.ConstraintLayout>